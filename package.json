{
  "name": "ae-tsx-runner",
  "displayName": "Adobe AE jsx && tsx Runner",
  "description": "Run Adobe After Effects jsx or tsx Script without ExtendScript Toolkit.",
  "version": "0.8.0",
  "publisher": "yuelili",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yuelioi/vscode-ae-script-tsx-linker.git"
  },
  "homepage": "https://github.com/Yuelioi/vscode-ae-script-tsx-linker",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "keywords": [
    "ae",
    "after effects",
    "extendscript",
    "jsx",
    "tsx",
    "runner"
  ],
  "icon": "img/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "runrun.JSXScript",
        "title": "%command.runScript%",
        "icon": {
          "light": "./img/light.svg",
          "dark": "./img/dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .jsx || resourceExtname == .tsx || resourceExtname == .ts || resourceExtname == .jsxbin",
          "command": "runrun.JSXScript",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .jsx || resourceExtname == .tsx || resourceExtname == .ts || resourceExtname == .jsxbin",
          "command": "runrun.JSXScript",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "ae-tsx-runner.hostSpecifier": {
          "type": "string",
          "default": "",
          "description": "%configuration.hostSpecifier.description%",
          "order": 1
        },
        "ae-tsx-runner.buildTool": {
          "type": "string",
          "enum": [
            "auto",
            "tsc",
            "rollup",
            "webpack",
            "esbuild"
          ],
          "default": "auto",
          "description": "%configuration.buildTool.description%",
          "enumDescriptions": [
            "%configuration.buildTool.auto%",
            "%configuration.buildTool.tsc%",
            "%configuration.buildTool.rollup%",
            "%configuration.buildTool.webpack%",
            "%configuration.buildTool.esbuild%"
          ],
          "order": 2
        },
        "ae-tsx-runner.customBuildCommand": {
          "type": "string",
          "default": "",
          "description": "%configuration.customBuildCommand.description%",
          "order": 3
        },
        "ae-tsx-runner.input": {
          "type": "string",
          "default": "",
          "description": "%configuration.input.description%",
          "order": 4
        },
        "ae-tsx-runner.output": {
          "type": "string",
          "default": "",
          "description": "%configuration.output.description%",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.7.2",
    "@types/vscode": "1.105.0",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "@vscode/test-electron": "2.5.2",
    "del": "8.0.1",
    "eslint": "9.37.0",
    "glob": "11.0.3",
    "mocha": "11.7.4",
    "nodemon": "3.1.10",
    "run-sequence": "^2.2.1",
    "ts-loader": "^9.5.4",
    "typescript": "5.9.3",
    "vscode-nls-dev": "^4.0.4",
    "esbuild": "^0.25.10"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "json5": "^2.2.3",
    "vscode-nls": "^5.2.0"
  },
  "license": "MIT"
}