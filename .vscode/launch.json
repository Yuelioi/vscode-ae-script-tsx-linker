{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension Debug",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        // "--disable-extensions" // 调试时关闭其他拓展
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "tasks: watch-tests"
    }
  ]
}